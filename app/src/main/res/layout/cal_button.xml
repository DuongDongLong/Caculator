<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:rowCount="5"
    android:columnCount="4"
    android:layout_margin="2dp"
    >
    <Button

        android:id="@+id/btn_Clear"

        style="@style/FunctionaTopButtons"
        android:layout_columnWeight="1"
        android:text="AC"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/btn_Dau"
        style="@style/FunctionaTopButtons"
        android:layout_columnWeight="1"
        android:text="+/-"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/btn_Percentage"
        android:layout_columnWeight="1"
        style="@style/FunctionaTopButtons"
        android:text="%"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />

    <Button
        android:id="@+id/btn_Num7"
        style="@style/FunctionalNumButtons"
        android:layout_columnWeight="1"
        android:text="7"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/btn_Num8"
        style="@style/FunctionalNumButtons"
        android:layout_columnWeight="1"
        android:text="8"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/btn_Num9"
        style="@style/FunctionalNumButtons"
        android:layout_columnWeight="1"
        android:text="9"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/Num4"
        style="@style/FunctionalNumButtons"
        android:layout_columnWeight="1"
        android:text="4"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/btn_Num5"
        style="@style/FunctionalNumButtons"
        android:layout_columnWeight="1"
        android:text="5"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/btn_Num6"
        style="@style/FunctionalNumButtons"
        android:layout_columnWeight="1"
        android:text="6"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/btn_Num1"
        style="@style/FunctionalNumButtons"
        android:layout_columnWeight="1"
        android:text="1"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/btn_num2"
        style="@style/FunctionalNumButtons"
        android:layout_columnWeight="1"
        android:text="2"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/Num3"
        style="@style/FunctionalNumButtons"
        android:layout_columnWeight="1"
        android:text="3"
        android:layout_column="2"
        android:layout_row="3"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/btn_num0"
        style="@style/FunctionaTopButtons"
        android:layout_columnWeight="1"
        android:text="0"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"
        />
    <Button
        android:id="@+id/btn_Doc"
        style="@style/FunctionaTopButtons"
        android:layout_columnWeight="1"
        android:text="."
        android:layout_column="2"
        android:layout_row="4"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/btn_Divide"
        style="@style/FunctionalRightButtons"
        android:layout_columnWeight="1"
        android:text="/"
        android:layout_column="3"
        android:layout_row="0"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/btn_Mutiply"
        style="@style/FunctionalRightButtons"
        android:layout_columnWeight="1"
        android:text="X"
        android:layout_column="3"
        android:layout_row="1"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/btn_Minus"
        style="@style/FunctionalRightButtons"
        android:layout_columnWeight="1"
        android:text="-"
        android:layout_column="3"
        android:layout_row="2"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/btn_Plus"
        style="@style/FunctionalRightButtons"
        android:layout_columnWeight="1"
        android:text="+"
        android:layout_column="3"
        android:layout_row="3"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />
    <Button
        android:id="@+id/btn_Result"
        style="@style/FunctionalRightButtons"
        android:layout_columnWeight="1"
        android:text="="
        android:layout_column="3"
        android:layout_row="4"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        />

</GridLayout>